<form  action="<%= albums_url %>" method="post">

  <label>Title:
  <input type="text" name="album[title]" value=""></label>
  <br>
  <label>Year:
  <input type="text" name="album[year]"></label>
  <label>type_of_band
  <input type="radio" name="album[type_of_band]" value="live" checked="checked">Live
  <input type="radio" name="album[type_of_band]" value="Studio" >Studio
  </label>
  <br>
  <select name="album[band_id]">
    <% @bands.each do |band| %>
    <option value="<%= band.id %>" selected="selected"><%= band.id %></option>
    <% end %>
  </select>

  <input type="submit" name="" value="create album">

</form>
